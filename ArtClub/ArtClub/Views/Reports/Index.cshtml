@model ArtClub.Models.ReportModels
@{
    ViewBag.Title = "Index";
}

<h2>Reports</h2>

<br />
<div class="row content">
    <div class="col-sm-4 text-left">
        <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo1">Income Report</button>
        <div id="demo1" class="collapse">
            <div>
                <br />
                A revenue and expenditure report for a particular month.
                <br />
                <br />
                @using (Html.BeginForm("GenerateIncomeRerport", "Reports"))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Month, new { htmlAttributes = new { @class = "form-control", type = "month" } })
                    @Html.ValidationMessageFor(model => model.Month, "", new { @class = "text-danger" })
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Generate Report" class="btn btn-default" />
                    </div>
                }
            </div>
        </div>
        <br>
        <br>
        <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo2">Members Payments Report</button>
        <div id="demo2" class="collapse">
            <div>
                <br />
                A report that shows all payments from members in a specific month.
                <br />
                <br />
                @using (Html.BeginForm("GenerateMembersPaymentsRerport", "Reports"))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Month, new { htmlAttributes = new { @class = "form-control", type = "month" } })
                    @Html.ValidationMessageFor(model => model.Month, "", new { @class = "text-danger" })
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Generate Report" class="btn btn-default" />
                    </div>
                }
            </div>
        </div>
        <br>
        <br>
    </div>
</div>